<%- layout("/layouts/navbar.ejs") %>

<div class="bg-gray-50 min-h-screen">
  <div class="max-w-6xl mx-auto px-4 py-12">

    <div class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Shaadiwali Blogs</h1>

      <% if (isAdmin) { %>
        <a
          href="/admin/blogs/new"
          class="bg-pink-600 text-white px-5 py-2 rounded-lg hover:bg-pink-700 transition"
        >
          ✍️ Create Blog
        </a>
      <% } %>
    </div>

    <% if (blogs.length === 0) { %>
      <p class="text-gray-500">No blogs published yet.</p>
    <% } %>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% blogs.forEach(blog => { %>
        <div class="bg-white rounded-xl shadow hover:shadow-lg transition overflow-hidden">
          
          <% if (blog.coverImage) { %>
            <img
              src="<%= blog.coverImage %>"
              class="w-full h-48 object-cover"
              alt="Blog cover"
            />
          <% } %>

          <div class="p-5">
            <h2 class="text-xl font-semibold text-gray-800 mb-2">
              <%= blog.title %>
            </h2>

            <p class="text-gray-500 text-sm mb-4">
              By shaadiwali• <%= blog.createdAt.toDateString() %>
            </p>

            <a
              href="/blogs/<%= blog._id %>"
              class="text-pink-600 font-medium hover:underline"
            >
              Read More →
            </a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>


