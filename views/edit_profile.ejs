<%- layout("/layouts/navbar.ejs") %>

<div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4">
  <div class="bg-white p-8 md:p-10 rounded-xl shadow-lg w-full max-w-2xl">
    
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-8">
      <% if (userProfile) { %>
        Edit Your Profile
      <% } else { %>
        Create Your Profile
      <% } %>
    </h2>
    
    <form 
    action="/profile" 
    method="POST" 
    enctype="multipart/form-data"
    class="space-y-5"
  >
  

      <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
        <div>
          <label for="first_name" class="block text-gray-700 font-medium mb-1">First Name</label>
          <input type="text" id="first_name" name="first_name" value="<%= userProfile ? userProfile.first_name : '' %>" required
            class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500" />
        </div>
        <div>
          <label for="last_name" class="block text-gray-700 font-medium mb-1">Last Name</label>
          <input type="text" id="last_name" name="last_name" value="<%= userProfile ? userProfile.last_name : '' %>" required
            class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500" />
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
        <div>
          <label for="age" class="block text-gray-700 font-medium mb-1">Age</label>
          <input type="number" id="age" name="age" value="<%= userProfile ? userProfile.age : '' %>"
            class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500" />
        </div>
        <div>
          <label for="gender" class="block text-gray-700 font-medium mb-1">Gender</label>
          <input type="text" id="gender" name="gender" value="<%= userProfile ? userProfile.gender : '' %>"
            class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500" />
        </div>
      </div>
      
      <div>
        <label for="address" class="block text-gray-700 font-medium mb-1">Address (City, Country)</label>
        <input type="text" id="address" name="address" value="<%= userProfile ? userProfile.address : '' %>"
          class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500" />
      </div>

      <div>
        <label for="Education" class="block text-gray-700 font-medium mb-1">Education</label>
        <input type="text" id="Education" name="Education" value="<%= userProfile ? userProfile.Education : '' %>"
          class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500" />
      </div>

      <div>
        <label for="work" class="block text-gray-700 font-medium mb-1">Work / Occupation</label>
        <input type="text" id="work" name="work" value="<%= userProfile ? userProfile.work : '' %>"
          class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500" />
      </div>
      <!-- ABOUT -->
<div>
  <label for="about" class="block text-gray-700 font-medium mb-1">
    About You
  </label>

  <textarea
    id="about"
    name="about"
    rows="4"
    placeholder="Tell something about yourself..."
    class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500"
  ><%= userProfile ? userProfile.about : '' %></textarea>
</div>

<!-- EXPERTISE -->
<div>
  <label for="expertise" class="block text-gray-700 font-medium mb-1">
    Expertise (comma separated)
  </label>

  <input
    type="text"
    id="expertise"
    name="expertise"
    placeholder="Leadership, Branding, Advertising"
    value="<%= userProfile?.expertise ? userProfile.expertise.join(', ') : '' %>"
    class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500"
  />

  <p class="text-xs text-gray-500 mt-1">
    These will appear as tags on your profile
  </p>
</div>

<!-- INTERESTS -->
<div>
  <label for="interests" class="block text-gray-700 font-medium mb-1">
    Interests (comma separated)
  </label>

  <input
    type="text"
    id="interests"
    name="interests"
    placeholder="Performance Marketing, Events, CRM"
    value="<%= userProfile?.interests ? userProfile.interests.join(', ') : '' %>"
    class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500"
  />

  <p class="text-xs text-gray-500 mt-1">
    These will appear as tags on your profile
  </p>
</div>


      <!-- COVER PHOTO -->
      <div>
        <label class="block text-gray-700 font-medium mb-1">Cover Image</label>
        <input
          type="file"
          name="coverImage"
          accept="image/*"
          class="w-full px-4 py-2 border rounded-lg"
        />
      
        <% if (userProfile?.coverImage) { %>
          <img
            src="<%= userProfile.coverImage %>"
            class="w-full h-32 mt-2 object-cover rounded-lg"
          />
        <% } %>
      </div>
      

 
      <!-- PROFILE IMAGE -->

      <div>
        <label class="block text-gray-700 font-medium mb-1">Profile Image</label>
        <input
          type="file"
          name="image"
          accept="image/*"
          class="w-full px-4 py-2 border rounded-lg"
        />
      
        <% if (userProfile?.image) { %>
          <img
            src="<%= userProfile.image %>"
            class="w-24 h-24 rounded-full mt-2 object-cover"
          />
        <% } %>
      </div>
      <div id="uploadStatus" class="hidden mt-4 text-center">
        <p id="uploadText" class="text-sm text-gray-600">Uploading...</p>
        <div class="w-full bg-gray-200 rounded-full h-2 mt-2">
          <div id="progressBar" class="bg-pink-600 h-2 rounded-full" style="width: 0%"></div>
        </div>
      </div>
      

      <button type="submit" 
        class="w-full bg-pink-600 text-white font-bold py-3 px-4 rounded-lg hover:bg-pink-700 transition-colors">
        Save Profile
      </button>
    </form>

  </div>
</div>
<script>
  const form = document.querySelector("form");
  const uploadStatus = document.getElementById("uploadStatus");
  const progressBar = document.getElementById("progressBar");
  const uploadText = document.getElementById("uploadText");

  form.addEventListener("submit", function (e) {
    e.preventDefault();

    const formData = new FormData(form);
    const xhr = new XMLHttpRequest();

    uploadStatus.classList.remove("hidden");
    uploadText.innerText = "Uploading images...";

    xhr.upload.onprogress = function (e) {
      if (e.lengthComputable) {
        const percent = Math.round((e.loaded / e.total) * 100);
        progressBar.style.width = percent + "%";
      }
    };

    xhr.onload = function () {
      if (xhr.status === 200) {
        uploadText.innerText = "Upload complete ✅";
        window.location.href = "/profile";
      } else {
        uploadText.innerText = "Upload failed ❌";
      }
    };

    xhr.open("POST", "/profile");
    xhr.send(formData);
  });
</script>


<%- include("layouts/footer.ejs") %>