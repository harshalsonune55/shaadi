  <div class="flex items-center justify-between mb-4">
    <h2 class="text-xl font-semibold text-gray-900">Photos</h2>

    <!-- Add Photos Button -->
    <% if ((userProfile.photos || []).length < 6) { %>
      <a
        href="/profile/photos"
        class="bg-pink-600 text-white text-sm px-4 py-2 rounded-full hover:bg-pink-700 transition"
