      />
    </div>

  </div>
</div>


  <!-- PROFILE CARD -->
  <div class="max-w-6xl mx-auto px-4 -mt-24">
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden">

      <!-- TOP SECTION -->
      <div class="flex flex-col md:flex-row items-center md:items-start gap-6 p-6">

        <!-- PROFILE IMAGE -->
        <div class="relative z-0 flex justify-center md:justify-start w-full md:w-auto">

          <img
            src="<%= userProfile.image || 'https://ui-avatars.com/api/?name=' + user.fullname %>"
            alt="Profile"
            class="w-40 h-40 rounded-full border-4 border-white shadow-lg"
          />

          <!-- VERIFIED BADGE -->
          <!-- VERIFIED / GET VERIFIED -->
          <% if (userProfile.isVerified) { %>
            <!-- VERIFIED -->
            <span
              class="absolute -bottom-2 -right-2
                     flex items-center gap-1
                     bg-gradient-to-r from-blue-600 to-blue-500
                     text-white text-xs font-semibold
                     px-3 py-1 rounded-full
                     shadow-lg ring-2 ring-white"
            >
              ‚úî Verified
            </span>
          
          <% } else if (userProfile.govtIdImage && !userProfile.isVerified) { %>
            <!-- PENDING -->
            <span
              class="absolute -bottom-2 -right-2
                     flex items-center gap-1
                     bg-gradient-to-r from-yellow-500 to-orange-500
                     text-white text-xs font-semibold
                     px-3 py-1 rounded-full
                     shadow-lg ring-2 ring-white animate-pulse"
            >
              ‚è≥ Pending
            </span>
          
          <% } else { %>
            <!-- NOT VERIFIED -->
