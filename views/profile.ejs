<%- layout("/layouts/navbar.ejs") %>

<div class="min-h-screen bg-gray-100">

  <!-- LIMITED COVER BACKGROUND -->

<div class="pt-6">
  <div class="max-w-6xl mx-auto relative px-4">

    <div class="h-40 md:h-56 rounded-2xl overflow-hidden bg-gray-200">

      <img
        src="<%= userProfile.coverImage || 'https://images.unsplash.com/photo-1503264116251-35a269479413' %>"
        alt="Cover Photo"
        class="w-full h-full object-cover"
      />
    </div>

  </div>
</div>


  <!-- PROFILE CARD -->
  <div class="max-w-6xl mx-auto px-4 -mt-24">
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden">

      <!-- TOP SECTION -->
      <div class="flex flex-col md:flex-row items-center md:items-start gap-6 p-6">

        <!-- PROFILE IMAGE -->
        <div class="relative z-0 flex justify-center md:justify-start w-full md:w-auto">

          <img
            src="<%= userProfile.image || 'https://ui-avatars.com/api/?name=' + user.fullname %>"
            alt="Profile"
            class="w-40 h-40 rounded-full border-4 border-white shadow-lg"
          />

          <!-- VERIFIED BADGE -->
          <!-- VERIFIED / GET VERIFIED -->
          <% if (userProfile.isVerified) { %>
            <span
              class="absolute -bottom-2 -right-2
                     flex items-center gap-1
                     bg-gradient-to-r from-blue-600 to-blue-500
                     text-white text-xs font-semibold
                     px-3 py-1 rounded-full
                     shadow-lg ring-2 ring-white"
            >
              ‚úî Verified
            </span>
          
          <% } else if (userProfile.govtIdImage) { %>
            <span
              class="absolute -bottom-2 -right-2
                     flex items-center gap-1
                     bg-gradient-to-r from-yellow-500 to-orange-500
                     text-white text-xs font-semibold
                     px-3 py-1 rounded-full
                     shadow-lg ring-2 ring-white animate-pulse"
            >
              ‚è≥ Pending
            </span>
          
          <% } else { %>
            <span
              class="absolute -bottom-2 -right-2
                     flex items-center gap-1
                     bg-gray-500 text-white text-xs font-medium
                     px-3 py-1 rounded-full
                     shadow ring-2 ring-white"
            >
              ‚úñ Not Verified
            </span>
          <% } %>
          
          

        </div>

        <!-- BASIC INFO -->
        <div class="flex-1 text-center md:text-left mt-4 md:mt-0 relative z-10">
          <h1 class="text-2xl md:text-3xl font-bold text-gray-900 mt-4 md:mt-20">
            <%= userProfile.first_name %> <%= userProfile.last_name %>
          </h1>

          <p class="text-lg text-gray-600 mt-1">
            <%= userProfile.work || "Industry Professional" %>
          </p>

          <p class="text-sm text-gray-500 mt-1">
            üìç <%= userProfile.address || "Location not specified" %>
          </p>

          <!-- ACTION BUTTONS -->
          <div class="flex flex-col sm:flex-row justify-center md:justify-start gap-3 mt-6">

            <a
              href="/profile/edit"
              class="border border-gray-300 text-gray-700 px-5 py-2 rounded-full hover:bg-gray-100 transition"
            >
              ‚úèÔ∏è Edit Profile
            </a>
            <% if (!userProfile.isVerified) { %>
              <a
                href="/profile/verify"
                class="bg-blue-600 text-white px-5 py-2 rounded-full hover:bg-blue-700 transition"
              >
                üõÇ Get Verified
              </a>
            <% } else { %>
              <span class="bg-blue-600 text-white px-4 py-2 rounded-full text-sm">
                ‚úì Verified Profile
              </span>
            <% } %>
            
          </div>
        </div>

        <!-- STATS -->
        <div class="flex justify-around md:justify-start gap-6 text-center w-full md:w-auto mt-6 md:mt-0">

          <div>
            <p class="text-xl font-bold text-gray-900">12.5k</p>
            <p class="text-sm text-gray-500">Followers</p>
          </div>
          <div>
            <p class="text-xl font-bold text-gray-900">52</p>
            <p class="text-sm text-gray-500">Experts</p>
          </div>
          <div>
            <p class="text-xl font-bold text-gray-900">18</p>
            <p class="text-sm text-gray-500">Advice</p>
          </div>
        </div>
      </div>

      <!-- ABOUT -->
      <div class="border-t px-6 py-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-2">About</h2>
        <p class="text-gray-700 leading-relaxed">
          <%= userProfile.about ||
          "Experienced professional with a strong background in leadership, strategy, and business growth. Passionate about mentoring, advising, and creating impact-driven solutions." %>
        </p>
      </div>

      <!-- EXPERTISE & INTERESTS -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 px-6 py-6 bg-gray-50">


        <!-- EXPERTISE -->
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-3">Expertise</h3>
          <div class="flex flex-wrap gap-2">
            <% (userProfile.expertise || ['Leadership','Branding','Advertising']).forEach(tag => { %>
              <span class="bg-blue-100 text-blue-700 px-3 py-1 rounded-full text-sm">
                #<%= tag %>
              </span>
            <% }) %>
          </div>
          <p class="text-sm text-green-600 mt-2">Open to networking: Yes</p>
        </div>

        <!-- INTERESTS -->
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-3">Interests</h3>
          <div class="flex flex-wrap gap-2">
            <% (userProfile.interests || ['Performance Marketing','Events','CRM']).forEach(tag => { %>
              <span class="bg-red-100 text-red-700 px-3 py-1 rounded-full text-sm">
                #<%= tag %>
              </span>
            <% }) %>
          </div>
          <p class="text-sm text-green-600 mt-2">Open to advising: Yes</p>
        </div>
      </div>

      <!-- PERSONAL INFO -->
      <div class="px-6 py-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Personal Information</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-gray-700">

          <p><strong>Email:</strong> <%= user.email %></p>
          <p><strong>Gender:</strong> <%= userProfile.gender || "Not specified" %></p>
          <p><strong>Age:</strong> <%= userProfile.age || "N/A" %></p>
          <p><strong>Education:</strong> <%= userProfile.Education || "Not specified" %></p>
        </div>
      </div>
      <!-- PHOTO GALLERY -->
<div class="border-t px-6 py-6">
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-xl font-semibold text-gray-900">Photos</h2>

    <!-- Add Photos Button -->
    <% if ((userProfile.photos || []).length < 6) { %>
      <a
        href="/profile/photos"
        class="bg-pink-600 text-white text-sm px-4 py-2 rounded-full hover:bg-pink-700 transition"
      >
        ‚ûï Add More Photos
      </a>
    <% } else { %>
      <span class="text-sm text-gray-500">
        Maximum 6 photos reached
      </span>
    <% } %>
  </div>

  <% if (userProfile.photos && userProfile.photos.length > 0) { %>
    <div class="relative">
      <div
        id="gallerySlider"
        class="flex gap-4 overflow-x-auto scroll-smooth scrollbar-hide"
      >
      <% userProfile.photos.forEach((photo, index) => { %>
        <div class="relative w-48 h-48 flex-shrink-0">
          
          <!-- PHOTO -->
          <img
            src="<%= photo %>"
            class="w-full h-full object-cover rounded-xl shadow-md"
            alt="Profile photo"
          />
      
          <!-- DELETE BUTTON -->
          <form
            action="/profile/photos/delete"
            method="POST"
            class="absolute top-2 right-2"
            onsubmit="return confirm('Delete this photo?')"
          >
            <input type="hidden" name="photoUrl" value="<%= photo %>" />
      
            <button
              type="submit"
              class="bg-red-600 text-white text-xs px-2 py-1 rounded-full hover:bg-red-700 shadow"
            >
              ‚úï
            </button>
          </form>
      
        </div>
      <% }) %>
      
      </div>
    </div>
  <% } else { %>
    <p class="text-gray-500 text-sm">
      No additional photos uploaded yet.
    </p>
  <% } %>
</div>



    </div>
  </div>
</div>

<style>
  .scrollbar-hide::-webkit-scrollbar {
  display: none;
}
.scrollbar-hide {
  -ms-overflow-style: none;
  scrollbar-width: none;
}

</style>

<script>
  let galleryOffset = 0;

  function slideGallery(direction) {
    const slider = document.getElementById("gallerySlider");
    const cardWidth = 280; // image width + gap
    const maxOffset = -(slider.scrollWidth - slider.parentElement.clientWidth);

    galleryOffset += direction * -cardWidth;

    if (galleryOffset > 0) galleryOffset = 0;
    if (galleryOffset < maxOffset) galleryOffset = maxOffset;

    slider.style.transform = `translateX(${galleryOffset}px)`;
  }
</script>
