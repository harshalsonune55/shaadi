    <% } %>
  </div>

  <% if (userProfile.photos && userProfile.photos.length > 0) { %>
    <div class="relative">
      <div
        id="gallerySlider"
        class="flex gap-4 overflow-x-auto scroll-smooth scrollbar-hide"
      >
      <% userProfile.photos.forEach((photo, index) => { %>
        <div class="relative w-48 h-48 flex-shrink-0">
          
          <!-- PHOTO -->
          <img
            src="<%= photo %>"
            class="w-full h-full object-cover rounded-xl shadow-md"
            alt="Profile photo"
          />
      
          <!-- DELETE BUTTON -->
          <form
            action="/profile/photos/delete"
            method="POST"
            class="absolute top-2 right-2"
            onsubmit="return confirm('Delete this photo?')"
          >
            <input type="hidden" name="photoUrl" value="<%= photo %>" />
      
            <button
              type="submit"
              class="bg-red-600 text-white text-xs px-2 py-1 rounded-full hover:bg-red-700 shadow"
            >
              ‚úï
            </button>
          </form>
      
        </div>
      <% }) %>
      
      </div>
    </div>
  <% } else { %>
    <p class="text-gray-500 text-sm">
      No additional photos uploaded yet.
    </p>
  <% } %>
</div>



    </div>
  </div>
</div>

<style>
  .scrollbar-hide::-webkit-scrollbar {
  display: none;
}
.scrollbar-hide {
  -ms-overflow-style: none;
  scrollbar-width: none;
}

</style>

<script>
  let galleryOffset = 0;

  function slideGallery(direction) {
    const slider = document.getElementById("gallerySlider");
    const cardWidth = 280; // image width + gap
    const maxOffset = -(slider.scrollWidth - slider.parentElement.clientWidth);

    galleryOffset += direction * -cardWidth;

    if (galleryOffset > 0) galleryOffset = 0;
    if (galleryOffset < maxOffset) galleryOffset = maxOffset;

    slider.style.transform = `translateX(${galleryOffset}px)`;
  }
</script>
