          <h3 class="text-lg font-semibold text-gray-900 mb-3">Expertise</h3>
          <div class="flex flex-wrap gap-2">
            <% (userProfile.expertise || ['Leadership','Branding','Advertising']).forEach(tag => { %>
              <span class="bg-blue-100 text-blue-700 px-3 py-1 rounded-full text-sm">
                #<%= tag %>
              </span>
            <% }) %>
          </div>
          <p class="text-sm text-green-600 mt-2">Open to networking: Yes</p>
        </div>

        <!-- INTERESTS -->
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-3">Interests</h3>
          <div class="flex flex-wrap gap-2">
            <% (userProfile.interests || ['Performance Marketing','Events','CRM']).forEach(tag => { %>
              <span class="bg-red-100 text-red-700 px-3 py-1 rounded-full text-sm">
                #<%= tag %>
              </span>
            <% }) %>
