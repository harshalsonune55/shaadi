          <p class="text-sm text-green-600 mt-2">Open to advising: Yes</p>
        </div>
      </div>

      <!-- whoviewed -->
      <div class="border-t px-6 py-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">
          üëÄ Who Viewed My Profile
        </h2>
      
        <% if (userProfile.profileViewsCount > 0) { %>
          <p class="text-gray-700 mb-3">
            <strong><%= userProfile.profileViewsCount %></strong> people viewed your profile
          </p>
      
          <% 
            let viewLimit = 0;
      
            if (userProfile.isSubscribed) {
              if (userProfile.subscriptionPlan === "Basic") viewLimit = 1;
              else if (userProfile.subscriptionPlan === "Premium") viewLimit = 5;
              else if (userProfile.subscriptionPlan === "Elite") viewLimit = userProfile.profileViews.length;
            }
      
            const visibleViews = viewLimit > 0
              ? userProfile.profileViews.slice(-viewLimit).reverse()
              : [];
          %>
      
          <% if (viewLimit > 0) { %>
      
            <!-- SCROLLABLE CONTAINER -->
            <div class="space-y-3 max-h-[360px] overflow-y-auto pr-2">
      
              <% visibleViews.forEach(view => { %>
                <div class="flex items-center gap-3 bg-gray-50 p-3 rounded-lg">
                  
                  <!-- Avatar -->
                  <img
                    src="<%= view.viewer?.image || 'https://ui-avatars.com/api/?name=User' %>"
                    class="w-10 h-10 rounded-full object-cover"
                  />
      
                  <div class="flex flex-col">
                    <span class="text-sm font-semibold text-gray-800">
                      <%= view.viewer 
                        ? `${view.viewer.first_name} ${view.viewer.last_name}` 
                        : "Unknown User" %>
                    </span>
      
                    <span class="text-xs text-gray-500">
                      Viewed on <%= new Date(view.viewedAt).toLocaleString() %>
                    </span>
                  </div>
      
                </div>
              <% }) %>
      
            </div>
      
            <% if (userProfile.profileViewsCount > viewLimit) { %>
              <p class="text-xs text-gray-500 mt-3">
                Showing last <%= viewLimit %> viewers
              </p>
            <% } %>
      
          <% } else { %>
            <!-- LOCKED -->
            <div class="mt-3 p-4 bg-yellow-50 border border-yellow-300 rounded-lg text-center">
              üîí Upgrade to <strong>Basic or Premium</strong> to see who viewed your profile
              <br />
              <a href="/pricing" class="text-pink-600 font-semibold underline">
                Upgrade Now ‚Üí
              </a>
            </div>
          <% } %>
      
        <% } else { %>
          <p class="text-gray-500 italic">
            No one has viewed your profile yet.
          </p>
        <% } %>
      </div>
      
      
      

      <!-- PERSONAL INFO -->
      <div class="px-6 py-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Personal Information</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-gray-700">

