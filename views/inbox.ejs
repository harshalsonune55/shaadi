<%- layout("layouts/navbar") %>

<div class="max-w-4xl mx-auto px-4 py-6">
  <h1 class="text-2xl font-bold mb-6">Inbox</h1>

  <% if (conversations.length === 0) { %>
    <p class="text-gray-500 text-center mt-20">No conversations yet.</p>
  <% } %>

  <div id="inbox-list" class="space-y-3">
    <% conversations.forEach(chat => { %>

      <a
        href="/chat/<%= chat.user._id %>"
        id="chat-<%= chat.user._id %>"
        class="
          flex items-center gap-4 p-4 rounded-xl border
          transition hover:shadow-md hover:bg-gray-50
          <%= chat.hasUnread ? 'bg-blue-50 border-blue-200' : 'bg-white' %>
        "
      >

        <!-- Avatar -->
        <div class="relative">
          <img
            src="<%= chat.user.image || 'https://ui-avatars.com/api/?name=' + chat.user.first_name %>"
            class="w-14 h-14 rounded-full object-cover"
          />

          <% if (chat.hasUnread) { %>
            <span class="absolute bottom-0 right-0 w-3 h-3 bg-red-600 border-2 border-white rounded-full"></span>
          <% } %>
        </div>

        <!-- Chat Info -->
        <div class="flex-1 min-w-0">
          <div class="flex justify-between items-center">
            <h3 class="font-semibold text-gray-900 truncate">
              <%= chat.user.first_name %> <%= chat.user.last_name || '' %>
            </h3>

            <span class="text-xs text-gray-400 ml-2 whitespace-nowrap">
              <%= new Date(chat.lastMessage.createdAt).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) %>
            </span>
          </div>

          <p class="text-sm text-gray-600 truncate mt-1">
            <%= chat.lastMessage.message %>
          </p>
        </div>

      </a>

    <% }) %>
  </div>
</div>

<%- include("layouts/footer") %>


<script>
    if (window.socket) {
      window.socket.on("update inbox", data => {
  const inboxList = document.getElementById("inbox-list");
  if (!inboxList) return;

  const existing = document.getElementById(`chat-${data.participant._id}`);
  if (existing) existing.remove();

  const unreadDot = data.hasUnread
    ? `<span class="w-2.5 h-2.5 bg-red-600 rounded-full ml-2"></span>`
    : "";

  const div = document.createElement("div");
  div.id = `chat-${data.participant._id}`;
  div.innerHTML = `
    <a href="/chat/${data.participant._id}"
       class="flex items-center gap-4 p-4 border rounded-lg hover:bg-gray-50 transition">

      <img src="${data.participant.image}"
           class="w-12 h-12 rounded-full object-cover"/>

      <div class="flex-1">
        <div class="font-semibold text-gray-800 flex items-center">
          ${data.participant.first_name} ${data.participant.last_name || ""}
          ${unreadDot}
        </div>
        <div class="text-sm text-gray-600 truncate">
          ${data.lastMessage.message}
        </div>
      </div>
    </a>
  `;

  inboxList.prepend(div);
});

    }
  </script>
  